# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Submit a new build to iTunes Connect"
  lane :build do
    increment_build_number
    commit_version_bump(
      message: "ðŸ¤– Changed build number for ðŸŽ [skip ci]"
    )
    push_to_git_remote(
      remote: "origin",
      local_branch: "development",
      remote_branch: "development",
      tags: false
    )
    match(type: "appstore")
    gym(
        project: "htwgCampus.xcodeproj",
        export_options: {
            method: "app-store",
            provisioningProfiles: {
              "org.htwg-konstanz.htwgCampus" => "match AppStore org.htwg-konstanz.htwgCampus"
            }
          }
    )
    pilot
  end
end
